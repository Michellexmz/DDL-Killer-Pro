<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michellezhang.ddlkillerpro">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DaysMatter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="登录" />
        <activity
            android:name=".Settings"
            android:label="设置" />
        <activity
            android:name=".DaysCalendar"
            android:label="日历" />
        <activity
            android:name=".Adding"
            android:label="添加事项" />
        <activity
            android:name=".Classification"
            android:label="分类" />
        <activity
            android:name=".LabelPopup"
            android:label="增加分类" />
        <activity
            android:name=".LabelDialog"
            android:label="选择分类"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name=".Register"
            android:label="注册" />
        <activity
            android:name=".ItemDetails"
            android:label="事项详情"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".set"></activity>
        <activity android:name=".activity.SetLabel"></activity>
        <activity android:name=".activity.SetNotice"></activity>
        <activity android:name=".activity.SetWidget"></activity>
        <activity android:name=".activity.AboutUs"></activity>
        <activity android:name=".activity.labe"></activity>
        <activity android:name=".AddingPopup"
            android:label="添加"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            />
    </application>

</manifest>