<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michellezhang.ddlkillerpro.ItemDetails">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2">

        <ImageButton
            android:id="@+id/btnreturn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:background="@drawable/btnreturn" />

        <TextView
            android:text="事项详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="91dp"
        android:id="@+id/toolbar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@color/blue"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/toolbar"
            android:layout_marginStart="22dp"
            app:srcCompat="@drawable/book"
            android:layout_above="@+id/itemLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:id="@+id/textName"
            android:textColor="@color/white"
            android:text="DDL Killer Pro" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:layout_alignStart="@+id/toolbar"
        android:id="@+id/toolbar3"
        android:layout_alignEnd="@+id/toolbar">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/anotherWhite"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_alignStart="@+id/toolbar3"
        android:layout_alignEnd="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textDDL"
            android:text="截止时间：xx/xx/xx xx:xx"
            android:textColor="#000000"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X天"
        android:textSize="40sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:text="还剩"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnCompele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="完成"
        android:layout_below="@+id/toolbar3"
        android:layout_toEndOf="@+id/textLeft"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCompele"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/textView2"
        android:text="删除" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:id="@+id/showComplete"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:layout_below="@+id/toolbar3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
